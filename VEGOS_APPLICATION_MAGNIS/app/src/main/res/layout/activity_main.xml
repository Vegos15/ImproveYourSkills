<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_icecream"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/color_black"
            android:text="Profile"
            android:textColor="#dedede"
            android:textSize="20dp"
            android:padding="20dp"
            />

        <Button
            android:id="@+id/main_btnEdit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center"
            android:layout_marginEnd="20dp"
            android:background="@drawable/icon_editor"
            tools:ignore="RtlHardcoded" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:background="#000"
                android:layout_height="200dp" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="17dp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/field_name"
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#303030"
                android:textSize="30dp"
                android:textStyle="bold" />


            <TextView
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Born on"
                android:textSize="17dp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/field_born"
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#303030"
                android:textSize="30dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="From"
                android:textSize="17dp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/field_from"
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#303030"
                android:textSize="30dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="17dp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/field_location"
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#303030"
                android:textSize="30dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_height="wrap_content"
                android:text="Job and study"
                android:textSize="17dp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/field_jobAndStudy"
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#303030"
                android:textSize="30dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_height="wrap_content"
                android:text="Phone number"
                android:textSize="17dp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/field_phone"
                android:layout_width="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_height="wrap_content"
                android:textColor="#303030"
                android:textSize="30dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_height="wrap_content"
                android:text="Bio"
                android:textSize="17dp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/field_bio"
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#303030"
                android:textSize="17dp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>



</LinearLayout>