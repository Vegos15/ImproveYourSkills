<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_icecream"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/color_black"
            android:text="Edit profile"
            android:textColor="#dedede"
            android:gravity="center"
            android:textSize="20dp"
            android:padding="0dp"
            />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center"
            android:layout_marginEnd="20dp"
            android:background="@drawable/icons_confirm"
            />

        <Button
            android:id="@+id/btn_withdrawal"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left|center"
            android:layout_marginStart="20dp"
            android:background="@drawable/icon_withdrawal" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view2"
                android:background="@color/colorPrimary"
                android:paddingTop="5dp"
                android:layout_width="120dp"
                android:layout_gravity="center"
                android:layout_height="120dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="10dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="17dp"
                android:textStyle="normal" />
            <EditText
                android:id="@+id/field_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="#252525"
                android:textSize="27dp"
                android:textStyle="normal" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Born on"
                android:textSize="17dp"
                android:textStyle="normal" />
            <EditText
                android:id="@+id/field_born"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="#252525"
                android:textSize="27dp"
                android:textStyle="normal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From"
                android:textSize="17dp"
                android:textStyle="normal" />
            <EditText
                android:id="@+id/field_from"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="#252525"
                android:textSize="27dp"
                android:textStyle="normal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="17dp"
                android:textStyle="normal" />
            <EditText
                android:id="@+id/field_location"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="#252525"
                android:textSize="27dp"
                android:textStyle="normal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job and study"
                android:textSize="17dp"
                android:textStyle="normal" />
            <EditText
                android:id="@+id/field_jobAndStudy"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="#252525"
                android:textSize="27dp"
                android:textStyle="normal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone number"
                android:textSize="17dp"
                android:textStyle="normal" />
            <EditText
                android:id="@+id/field_phone"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="#252525"
                android:textSize="27dp"
                android:textStyle="normal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bio"
                android:textSize="17dp"
                android:textStyle="normal" />
            <EditText
                android:id="@+id/field_bio"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="#252525"
                android:textSize="27dp"
                android:textStyle="normal" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>